<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabhsr.tracker.LinearLayout">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingRight="12dp"
    android:orientation="vertical"
    android:gravity="right"
    android:id="@+id/lin">

    <TextView android:text="Red"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:background="@color/red"
        android:layout_height="wrap_content"
        android:id="@+id/txtred"/>

    <TextView android:text="Orange"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/txturange"
        android:background="@color/orange"
        android:layout_height="wrap_content" />
    <TextView android:text="Blue" android:layout_width="fill_parent"
        android:id="@+id/txtblue"
        android:gravity="center"
        android:background="@color/blue"
        android:layout_height="wrap_content" />

    <TextView android:text="Green" android:layout_width="fill_parent"
        android:gravity="center"
        android:id="@+id/txtgreen"
        android:background="@color/green"
        android:layout_height="wrap_content" />

</LinearLayout>


</RelativeLayout>
