<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabhsr.tracker.Registeration"
    android:id="@+id/Regist_BackG">

    <TextView android:text="Register" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_Register"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter User name"
        android:id="@+id/TextView_Username"
        android:layout_marginTop="41dp"
        android:textSize="16dp"
        android:layout_below="@+id/TextView_Register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_RegUser"
        android:layout_alignTop="@+id/TextView_Username"
        android:layout_toRightOf="@+id/TextView_Username"
        android:layout_toEndOf="@+id/TextView_Username"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:width="200dp"
        android:height="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditText_RegPwd"
        android:layout_below="@+id/EditText_RegUser"
        android:layout_marginTop="28dp"
        android:width="300dp"
        android:layout_alignLeft="@+id/EditText_RegUser"
        android:layout_alignStart="@+id/EditText_RegUser" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:id="@+id/textView_Password"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/EditText_RegPwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Email Address"
        android:id="@+id/TextView_RegEmail"
        android:textSize="16dp"
        android:layout_below="@+id/textView_Password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:width="300dp"
        android:layout_alignBottom="@+id/TextView_RegEmail"
        android:layout_alignLeft="@+id/EditText_RegPwd"
        android:layout_alignStart="@+id/EditText_RegPwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn_Reg"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TextView_Username"
        android:layout_toEndOf="@+id/TextView_Username"
        android:layout_marginBottom="66dp"
        android:textSize="16dp" />

</RelativeLayout>
