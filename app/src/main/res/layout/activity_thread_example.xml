<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabhsr.tracker.ThreadExample"
    android:id="@+id/tre">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myTextView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnPress"
        android:layout_alignStart="@+id/btnPress" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Me"
        android:id="@+id/btnPress"
        android:layout_above="@+id/btnThrd"
        android:layout_alignRight="@+id/btnThrd"
        android:layout_alignEnd="@+id/btnThrd"
        android:layout_marginBottom="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With thread"
        android:id="@+id/btnThrd"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With handler"
        android:id="@+id/btnHandler"
        android:layout_below="@+id/btnThrd"
        android:layout_alignLeft="@+id/btnThrd"
        android:layout_alignStart="@+id/btnThrd"
        android:layout_marginTop="43dp" />

</RelativeLayout>
