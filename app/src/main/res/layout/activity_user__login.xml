<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabhsr.tracker.User_Login"
    android:id="@+id/UserLogin_BackG">

    <TextView android:text="Welcome!!!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_Welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login "
        android:id="@+id/TextView_Login"
        android:layout_below="@+id/TextView_Welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textSize="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EditText_UserName"
        android:layout_below="@+id/TextView_Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:outlineProvider="none"
        android:editable="true"
        android:enabled="true"
        android:text="Enter User Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditText_Password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:width="150dp"
        android:password="true"
        android:editable="false"
        android:accessibilityLiveRegion="none"
        android:focusable="true"
        android:outlineProvider="bounds"
        android:text="Enter the Password"
        android:enabled="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="New User Register"
        android:id="@+id/Btn_Register"

        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Btn_Login"
        android:layout_alignStart="@+id/Btn_Login" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Login"
        android:id="@+id/Btn_Login"

        android:layout_below="@+id/EditText_Password"
        android:layout_alignLeft="@+id/TextView_Login"
        android:layout_alignStart="@+id/TextView_Login" />

</RelativeLayout>
